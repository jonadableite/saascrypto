{
  "name": "crypto-bot-saas-api",
  "version": "1.0.0",
  "description": "Uma API profissional e segura para um SaaS de bot de negociação de criptomoedas",
  "main": "dist/app.js",
  "scripts": {
    "start": "node dist/app.js",
    "dev": "ts-node-dev --respawn --transpile-only src/app.ts",
    "build": "tsc",
    "format": "biome format --write .",
    "lint": "biome lint .",
    "check": "biome check --apply .",
    "ci": "biome ci .",
    "prepare": "husky install",
    "test": "jest",
    "migrate": "prisma migrate dev",
    "generate": "prisma generate"
  },
  "keywords": [
    "crypto",
    "bot",
    "trading",
    "saas",
    "api"
  ],
  "author": "Jonadab Leite <jonadab.leite@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jonadableite/crypto-bot-saas-api.git"
  },
  "dependencies": {
    "@prisma/client": "^6.3.1",
    "@types/nodemailer": "^6.4.17",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^6.11.2",
    "helmet": "^6.2.0",
    "ioredis": "^5.5.0",
    "jsonwebtoken": "^9.0.2",
    "node-binance-api": "^0.13.4",
    "nodemailer": "^6.10.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.0",
    "@types/jsonwebtoken": "^9.0.8",
    "@types/node": "^22.13.4",
    "husky": "^9.1.7",
    "jest": "^29.5.0",
    "prisma": "^6.3.1",
    "ts-jest": "^29.1.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
